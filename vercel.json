{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    },
    {
      "src": "scripts/animate.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/animate",
      "dest": "scripts/animate.py"
    }
  ],
  "env": {
    "OPENAI_API_KEY": "@openai-api-key"
  }
} 